# generated by puppet
LoadPlugin "apache"
<Plugin "apache">
    <%- @modules.each do |module_instance, module_config| -%>
    <Instance "<%= module_instance %>">
        <%- module_config.each do |key,value| -%>
        <%= key -%> <%= value %>
        <%- end -%>
    </Instance>
    <%- end -%>
</Plugin>

<%- if @filter_metrics == true -%>
LoadPlugin match_regex
<Chain "PostCache">
  <Rule>
    <Match "regex">
      Plugin "^apache$"
    </Match>
    <Target "jump">
      Chain "FilterApacheStats"
    </Target>
  </Rule>
  Target "write"
</Chain>

<Chain "FilterApacheStats">
<%- @filter_metric_rules.each do |rule_instance, rule| -%>
    <Rule "<%= rule_instance -%>">
      <Match "regex">
      <%- rule.each do |key,value| -%>
        <%- if key != "Type" -%>
        <%= key -%> "<%= value %>"
	<%- else -%>
        <%= key -%> "^<%= value %>$"
	<%- end -%>
      <%- end -%>
      </Match>
      Target "return"
    </Rule>
<%- end -%>
  Target "stop"
</Chain>
<%- end -%>
