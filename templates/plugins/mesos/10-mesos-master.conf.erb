# generated by puppet
<LoadPlugin "python">
    Globals true
</LoadPlugin>

<Plugin "python">
    ModulePath "/usr/share/collectd/mesos-collectd-plugin"

    Import "mesos-master"

    <%- @modules.each do |module_instance, module_config| -%>
    <Module "<%= module_instance %>">
        <%- module_config.sort_by { |k| k }.each do |key,value| -%>
        <%= key -%> <%= value %>
        <%- end -%>
    </Module>
    <%- end -%>
</Plugin>

<%- if @filter_metrics == true -%>
LoadPlugin match_regex
<Chain "PostCache">
  <Rule>
    <Match "regex">
      Plugin "^mesos$"
    </Match>
    <Target "jump">
      Chain "FilterMesosStats"
    </Target>
  </Rule>
  Target "write"
</Chain>

<Chain "FilterMesosStats">
<%- @filter_metric_rules.each do |rule_instance, rule| -%>
    <Rule "<%= rule_instance -%>">
      <Match "regex">
      <%- rule.sort_by { |k| k }.each do |key,value| -%>
        <%- if key != "Type" -%>
        <%= key -%> "<%= value %>"
	<%- else -%>
        <%= key -%> "^<%= value %>$"
	<%- end -%>
      <%- end -%>
      </Match>
      Target "return"
    </Rule>
<%- end -%>
  Target "stop"
</Chain>
<%- end -%>
