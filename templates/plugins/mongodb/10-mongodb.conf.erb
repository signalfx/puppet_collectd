# generated by puppet
TypesDB "/usr/share/collectd/types.db"
LoadPlugin python
<Plugin "python">
    ModulePath "/usr/share/collectd/mongodb-collectd-plugin"
    Import "mongodb"
    <%- @modules.each do |module_instance, module_config| -%>
    <Module <%= module_instance %>>
        <%- module_config.sort_by { |k| k }.each do |key,value| -%>
        <%= key -%> <%= value %>
        <%- end -%>
    </Module>
    <%- end -%>
</Plugin>

<%- if @filter_metrics == true -%>
LoadPlugin match_regex
<Chain "PostCache">
  <Rule>
    <Match "regex">
      Plugin "^mongo$"
    </Match>
    <Target "jump">
      Chain "FilterMongoStats"
    </Target>
  </Rule>
  Target "write"
</Chain>

<Chain "FilterMongoStats">
<%- @filter_metric_rules.each do |rule_instance, rule| -%>
    <Rule "<%= rule_instance -%>">
      <Match "regex">
      <%- rule.sort_by { |k| k }.each do |key,value| -%>
        <%- if key != "Type" -%>
        <%= key -%> "<%= value %>"
	<%- else -%>
        <%= key -%> "^<%= value %>$"
	<%- end -%>
      <%- end -%>
      </Match>
      Target "return"
    </Rule>
<%- end -%>
  Target "stop"
</Chain>
<%- end -%>
